<%- include('layouts/header'); -%>
<body>
  <%- include('layouts/title'); -%>
  <main>
    <%- include('layouts/adminNav'); -%>
    
    <h1 id="loginTitle">Edit Page</h1>
    <form action="" method="POST" enctype="multipart/form-data" action="">
        Page title: 
        <input type="text" name="pageTitle" id="pageTitle" value="<%= page.pageTitle %>">
        <br><br>
        Hero image: 
        <input type="file" name="heroImage" id="heroImage">
        <br><br>
        <textarea style="width:600px;" name="pageDetail" id="pageDetail">
          <%= page.pageDetail %>
        </textarea>
        <input type="submit" value="Submit">
        <div id="errors">
          <%
            if(typeof(errors) != 'undefined'){
              for(var error of errors){
              %>
                <p class="errors"><%= error.msg %></p>
              <%
              }
            }
          %>
        </div>
    </form>    
  </main>

</body>
<%- include('layouts/footer'); -%>

